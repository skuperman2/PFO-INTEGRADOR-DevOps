# Example .env file for EcomData Docker
# Copy this file to `.env` and edit values as needed for local deployment.

# Quart settings
QUART_APP=app:app
QUART_ENV=development

# Application port
PORT=5000

# Hypercorn workers (increase for more concurrency)
HYPERCORN_WORKERS=1

# SQLAlchemy echo (set to true for debug; false in production)
SQLALCHEMY_ECHO=false

# If you want to persist the SQLite DB, set the host path and uncomment the volume in docker-compose.yml
# SQLITE_PATH=./ecomdata.db
